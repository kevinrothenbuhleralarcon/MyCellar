<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Inventory.Header" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>

    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="List">
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="btnPlusMinusTransparent" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="fabSize">mini</item>
        <item name="rippleColor">@color/transparent</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="btnPlusMinus" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">mini</item>
        <item name="backgroundTint">?colorPrimary</item>
        <item name="tint">@color/black</item>
    </style>
</resources>